{
  "installCommand": "npm install --include=optional",
  "buildCommand": "npm run build",
  "crons": [
    {
      "path": "/api/cron/refresh-suggestions",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/refresh-serp", 
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/refresh-trends",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/recompute-scores",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/update-personalization",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/affiliate/cron/monthly-payouts",
      "schedule": "0 9 1 * *"
    },
    {
      "path": "/api/cron/daily-blog-publish",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/cleanup-images",
      "schedule": "0 2 * * *"
    }
  ]
}
